<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<context:component-scan base-package="phoenix.service" />

	<bean id="mysqlDS" class="phoenix.datasource.DataSourceProxy"
		destroy-method="close" />

	<bean id="hive-driver" class="org.apache.hive.jdbc.HiveDriver" />
	<bean id="hiveDS"
		class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driver" ref="hive-driver" />
		<property name="url" value="jdbc:hive2://119.29.58.96:50071/default" />
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="hiveDS" />
		<property name="mapperLocations" value="classpath*:mapper/*.xml" />
		<property name="configLocation" value="configuration.xml" />
		<property name="typeAliasesPackage" value="phoenix.dataObject" />
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="phoenix.dao" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>

</beans>