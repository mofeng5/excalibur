<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="phoenix.dao.AreaDao">

	<sql id="areaColumns">
		id,country_code,country_name,region_code,region_name,parent_id,gmt_create_time,gmt_modify_time,cc_lock,attributes
	</sql>

	<select id="queryAreaList" parameterType="java.util.Map"
		resultType="area">
		SELECT
		<include refid="areaColumns" />
		FROM area
		<where>
			<if test="id != null"> id = #{id}</if>
			<if test="countryCode != null"> and country_code = #{countryCode}</if>
			<if test="countryName != null"> and country_name = #{countryName}</if>
			<if test="regionCode != null"> and region_code = #{regionCode}</if>
			<if test="regionName != null"> and region_name = #{regionName}</if>
			<if test="parentId != null"> and parent_id = #{parentId}</if>
		</where>
	</select>
</mapper>
